<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/settings_layout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <include layout="@layout/custom_toolbar"/>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/settings_reader_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:textColor="?attr/colorPrimary"
                        android:textSize="14sp"
                        android:text="@string/settings_reader"/>
                    <LinearLayout
                        android:id="@+id/settings_reader_mode_btn"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:padding="16dp"
                        android:clickable="true"
                        android:background="?android:attr/selectableItemBackground">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:textColor="?android:attr/textColorPrimary"
                            android:text="@string/settings_reader_mode"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="2dp"
                            android:textSize="14sp"
                            android:text="@string/settings_reader_mode_summary"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/settings_reader_config_btn"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:padding="16dp"
                        android:clickable="true"
                        android:background="?android:attr/selectableItemBackground">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:textColor="?android:attr/textColorPrimary"
                            android:text="@string/settings_reader_config"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="2dp"
                            android:textSize="14sp"
                            android:text="@string/settings_reader_config_summary"/>
                    </LinearLayout>
                    <RelativeLayout
                        android:id="@+id/settings_reader_bright_btn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:padding="16dp"
                        android:clickable="true"
                        android:background="?android:attr/selectableItemBackground">
                        <android.support.v7.widget.AppCompatCheckBox
                            android:id="@+id/settings_reader_bright_checkbox"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:clickable="false"
                            android:focusable="false"
                            android:background="@null"/>
                        <TextView
                            android:id="@+id/settings_reader_bright_title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toLeftOf="@id/settings_reader_bright_checkbox"
                            android:textSize="16sp"
                            android:textColor="?android:attr/textColorPrimary"
                            android:text="@string/settings_reader_bright"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toLeftOf="@id/settings_reader_bright_checkbox"
                            android:layout_below="@id/settings_reader_bright_title"
                            android:textSize="14sp"
                            android:text="@string/settings_reader_bright_summary"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/settings_reader_hide_btn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:padding="16dp"
                        android:clickable="true"
                        android:background="?android:attr/selectableItemBackground">
                        <android.support.v7.widget.AppCompatCheckBox
                            android:id="@+id/settings_reader_hide_checkbox"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:clickable="false"
                            android:focusable="false"
                            android:background="@null"/>
                        <TextView
                            android:id="@+id/settings_reader_hide_title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toLeftOf="@id/settings_reader_hide_checkbox"
                            android:textSize="16sp"
                            android:textColor="?android:attr/textColorPrimary"
                            android:text="@string/settings_reader_hide"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toLeftOf="@id/settings_reader_hide_checkbox"
                            android:layout_below="@id/settings_reader_hide_title"
                            android:textSize="14sp"
                            android:text="@string/settings_reader_hide_summary"/>
                    </RelativeLayout>
                </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/settings_download_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:textColor="?attr/colorPrimary"
                    android:textSize="14sp"
                    android:text="@string/settings_download"/>
                <LinearLayout
                    android:id="@+id/settings_download_connection_btn"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:padding="16dp"
                    android:clickable="true"
                    android:background="?android:attr/selectableItemBackground">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textColor="?android:attr/textColorPrimary"
                        android:text="@string/settings_download_connection"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="2dp"
                        android:textSize="14sp"
                        android:text="@string/settings_download_connection_summary"/>
                </LinearLayout>
            </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/settings_other_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:textColor="?attr/colorPrimary"
                        android:textSize="14sp"
                        android:text="@string/settings_other"/>
                    <LinearLayout
                        android:id="@+id/settings_other_launch_btn"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:padding="16dp"
                        android:clickable="true"
                        android:background="?android:attr/selectableItemBackground">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:textColor="?android:attr/textColorPrimary"
                            android:text="@string/settings_other_launch"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="2dp"
                            android:textSize="14sp"
                            android:text="@string/settings_other_launch_summary"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/settings_other_theme_btn"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:padding="16dp"
                        android:clickable="true"
                        android:background="?android:attr/selectableItemBackground">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:textColor="?android:attr/textColorPrimary"
                            android:text="@string/settings_other_theme"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="2dp"
                            android:textSize="14sp"
                            android:text="@string/settings_other_theme_summary"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/settings_other_storage_btn"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:padding="16dp"
                        android:clickable="true"
                        android:background="?android:attr/selectableItemBackground">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:textColor="?android:attr/textColorPrimary"
                            android:text="@string/settings_other_storage"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="2dp"
                            android:textSize="14sp"
                            android:text="@string/settings_other_storage_summary"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/settings_other_cache_btn"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:padding="16dp"
                        android:clickable="true"
                        android:background="?android:attr/selectableItemBackground">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:textColor="?android:attr/textColorPrimary"
                            android:text="@string/settings_other_cache"/>
                        <TextView
                            android:id="@+id/settings_other_cache_summary"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="2dp"
                            android:textSize="14sp"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
    <include layout="@layout/custom_night_mask"/>
</FrameLayout>